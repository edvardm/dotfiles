[include]
  path = ~/dotfiles/git_user

[alias]
    dft = difftool
    br = branch
    ch = cherry-pick
    cm = commit -m
    cmnv = commit --no-verify -m
    co = checkout
    dft = difftool
    ma = machete
    dsm = diff --stat origin/master
    gr = grep
    rb = rebase --update-refs
    rc = rebase --continue
    sw = switch
    w = grep -w
    wt = worktree

    # for pairing sessions where we want to just quickly sync working branch
    wip = commit -m "WIP" --no-verify

    forgot = commit --amend --no-edit
    forgotv = commit --no-verify --amend --no-edit
    recent = !git branch --color=always --sort=-committerdate | tac | head -50
	tree = log --graph --decorate --pretty=oneline --abbrev-commit

    ticket = "!git sw -c \"$1/$2\" #"

    cleanup = "!git worktree prune; git delete-merged-branches ; git delete-squashed-branches"

    cart = "!git commit --no-verify -m \"🎨  $1\" #"
    cboom = "!git commit -m \"💥  $1\" #"
    cci = "!git commit -m \"💚  $1\" #"
    cconf = "!git commit -m \"🔧  $1\" #"
    cdead = "!git commit -m \"⚰️  $1\" #"
    cdepl = "!git commit -m \"🚀  $1\" #"
    cdev = "!git commit -m \"🔨 $1\" #"
    cdoc = "!git commit -m \"📝  $1\" #"
    cdocker = "!git commit -m \"🐳  $1\" #"
    cdowndep = "!git commit -m \"⬇️  $1\" #"
    cdx = "!git commit --no-verify -m \"🧑‍💻 $1\" #"
    cfeat = "!git commit -m \"🚩  $1\" #"
    cfix = "!git commit -m \"🐛 $1\" #"
    cgup = "!git commit -m \"⚡  $1\" #"
    chot = "!git commit -m \"🚑  $1\" #"
    cign = "!git commit -m \"🙈  $1\" #"
    cinf = "!git commit -m \"🧱 $1\" #"
    cinit = "!git init && git add . && git commit -m \"🎉 initial version\" #"
    clint = "!git commit -m \"🚨  $1\" #"
    clog = "!git commit -m \"🔊  $1\" #"
    cnew = "!git commit -m \"✨  $1\" #"
    cnewdep = "!git commit -m \"➕  $1\" #"
    cperf = "!git commit -m \"⚡️  $1\" #"
    cpr = "!git commit -m \"👌  $1\" #"
    cref = "!git commit --no-verify -m \"♻️  $1\" #"
    crem = "!git commit -m \"🔥  $1\" #"
    crev = "!git commit -m \"⏪  $1\" #"
    crmdep = "!git commit -m \"➖  $1\" #"
    csec = "!git commit -m \"🔒  $1\" #"
    ctest = "!git commit -m \"✅  $1\" #"
    ctext = "!git commit -m \"📝  $1\" #"
    ctypo = "!git commit -m \"✏️  $1\" #"
    cui = "!git commit -m \"💄  $1\" #"
    cupdep = "!git commit -m \"⬆️  $1\" #"
    cver = "!git commit -m \"🔖  $1\" #"
    cwip = "!git commit --no-verify -m \"🚧  $1\" #"

[githooks "autoupdate"]
  lastrun = 1553681835

[log]
  date = iso
[format]
  pretty = format:%C(yellow)%h %Cblue%>(14)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s

[diff]
    colorMoved = dimmed-zebra
    # colorMoved = default
    tool = difftastic
	external = difft
    # algorithm = patience
[difftool]
  prompt = false

[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"


[core]
	excludesfile = /Users/ed/.gitignore_global
	ignorecase = false
    pager = delta

[pager]
    difftool = true

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = yellow
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color]
  ui = true
[rerere]
	enabled = true
[pull]
    # rebase = true
	twohead = ort
[rebase]
	autoStash = true
	updateRefs = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[fetch]
	prune = true
[include]
  path = ~/dotfiles/local/git.config

[interactive]
    diffFilter = delta --color-only --features=interactive
[add.interactive]
    useBuiltin = false

[delta]
    whitespace-error-style = 22 reverse
    line-numbers = true
    side-by-side = true
    decorations = true
    navigate = true
    light = false

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
[init]
	defaultBranch = master
	templateDir = /Users/ed/.git-template
