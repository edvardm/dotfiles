[alias]
h = rev-parse --short HEAD
bb = !~/.local/bin/better-branch.sh
nb = checkout -b
br = branch
ch = cherry-pick
clone-head = clone --filter=tree:0
cm = commit -m
grn = grep -n 
cmnv = commit --no-verify -m
co = checkout
dft = difftool
dsm = diff --stat origin/master
gr = grep
ma = machete
rb = rebase --update-refs
rc = rebase --continue
staash = stash --all
sw = switch
w = grep -w
wt = worktree

forgot = commit --amend --no-edit
nforgot = commit --no-verify --amend --no-edit
recent = !git branch --color=always --sort=-committerdate | head -30
tree = log --graph --decorate --pretty=oneline --abbrev-commit

cleanup = "git delete-merged-branches ; git delete-squashed-branches"

# for pairing sessions where we want to just quickly sync working branch
